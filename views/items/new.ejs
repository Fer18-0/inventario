<%- include('../partials/header') %>
<section>
  <h2>Agregar Item</h2>
  <form method="post" action="/items">
    <label>Nombre: <input name="name" required></label>
    <label>Categoría:
      <select name="category" required>
        <option value="Silla">Silla</option>
        <option value="Mesa">Mesa</option>
        <option value="Inflable">Inflable</option>
      </select>
    </label>
    <label>Descripción: <textarea name="description"></textarea></label>
    <label>Precio por día: <input name="pricePerDay" type="number" step="0.01" required></label>
    <label>Stock: <input name="stock" type="number" required></label>
    <button type="submit">Crear</button>
  </form>
</section>
<%- include('../partials/footer') %>